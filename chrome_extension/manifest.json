{
  "name": "HyperLinkIt",
  "version": "1.0",
  "description": "Generate url to any highlighted text on the page",
  "manifest_version": 2,
  "permissions": ["activeTab",  "<all_urls>"],
  "browser_action": {
      "default_title": "Selected Text",
      "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selection.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
